<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.hello-world"
        version   = "1.0.0">

    <name>Songs</name>

    <description>
        Get access to listen and download all your favorite songs 
    </description>

    <author href="http://phonegap.com" email="support@phonegap.com">
        Alex Tsado and Husein Kadiri
    </author>

    <!--
        Enable individual API permissions here.
        The "device" permission is required for the 'deviceready' event.
    -->
    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="org.apache.cordova.file" version="0.2.4" />
    <feature name="org.apache.cordova.file-transfer" />

    <icon src="icon.png" />
    
</widget>
